{
  "manifest_version": 3,
  "name": "Technology Lookup - cmlabs Tools",
  "description": "Technology Lookup is a tool that you can use to identify what technology was used to build a website by simply entering its URL.",
  "version": "1.0.0",
  "action": {
    "default_popup": "views/index/index.html"
  },
  "icons": {
    "16": "assets/images/icon.png",
    "32": "assets/images/icon.png",
    "48": "assets/images/icon.png",
    "128": "assets/images/icon.png"
  },
  "background": {
    "service_worker": "service_worker/background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs"]
}
