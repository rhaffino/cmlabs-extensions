{
  "manifest_version": 3,
  "name": "Robots.txt Checker - cmlabs SEO Tools",
  "description": "Robots.txt Checker is an essential tool designed to ensure the efficiency, accuracy, and validity of a website's robots.txt file.",
  "version": "1.0.1",
  "action": {
    "default_popup": "views/index/index.html"
  },
  "icons": {
    "16": "assets/images/icon-robotstxt-checker.png",
    "32": "assets/images/icon-robotstxt-checker.png",
    "48": "assets/images/icon-robotstxt-checker.png",
    "128": "assets/images/icon-robotstxt-checker.png"
  },
  "background": {
    "service_worker": "service_worker/background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs"]
}
